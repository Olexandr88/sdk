{
  "name": "@story-protocol/react",
  "version": "0.0.4-test-1",
  "description": "Story Protocol React SDK",
  "main": "dist/story-protocol-react.cjs.js",
  "module": "dist/story-protocol-react.esm.js",
  "types": "dist/story-protocol-react.cjs.d.ts",
  "typings": "dist/story-protocol-react.cjs.d.ts",
  "exports": {
    ".": {
      "module": "./dist/story-protocol-react.esm.js",
      "default": "./dist/story-protocol-react.cjs.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "pnpm run fix && preconstruct build",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "tsc": "tsc --noEmit",
    "update": "cd ../protocol-core && git pull origin main && yarn && forge build && cd ../react",
    "update:build": "pnpm run update && pnpm wagmi generate && preconstruct build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/preset-typescript": "^7.23.0",
    "@preconstruct/cli": "^2.8.1",
    "@story-protocol/eslint-config": "workspace:*",
    "@story-protocol/prettier-config": "workspace:*",
    "@story-protocol/tsconfig": "workspace:*",
    "@types/react": "^18.2.55",
    "@wagmi/cli": "^2.1.0",
    "change-case": "^5.4.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^2.8.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "abitype": "^0.10.2",
    "tsc": "^2.0.4",
    "viem": "^1.18.4",
    "wagmi": "^2.5.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "viem": ">=2.0.0"
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts"
    ],
    "exports": true
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "prettier": "@story-protocol/prettier-config"
}
